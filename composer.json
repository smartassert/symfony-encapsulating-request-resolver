{
    "name": "webignition/encapsulating-request-resolver-bundle",
    "description": "Symfony controller action argument resolver for types that extend Symfony\\Component\\HttpFoundation\\Request",
    "keywords": [],
    "homepage": "https://github.com/webignition/encapsulating-request-resolver-bundle",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Jon Cram",
            "email": "webignition@gmail.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "webignition\\EncapsulatingRequestResolverBundle\\": ""
        },
        "exclude-from-classmap": [
            "/Tests/"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "webignition\\EncapsulatingRequestResolverBundle\\Tests\\": ""
        }
    },
    "scripts": {
        "cs-fixer-dry-run": "docker run --rm -i -w=/app -v ${PWD}:/app oskarstark/php-cs-fixer-ga:latest --allow-risky=yes --dry-run --verbose --show-progress none",
        "cs-fixer-fix": "docker run --rm -i -w=/app -v ${PWD}:/app oskarstark/php-cs-fixer-ga:latest --allow-risky=yes --diff",
        "cs-phpcs": "./vendor/bin/phpcs",
        "cs": [
            "@cs-fixer-dry-run",
            "@cs-phpcs"
        ],
        "static-analysis": "./vendor/bin/phpstan analyse --ansi",
        "test": "./vendor/bin/phpunit --colors=always",
        "ci": [
            "@cs",
            "@static-analysis",
            "@test"
        ]
    },
    "require": {
        "php": ">=8.0.2",
        "ext-json": "*",
        "symfony/config": "5.4.* || 6.0.*",
        "symfony/dependency-injection": "5.4.* || 6.0.*",
        "symfony/http-kernel": "5.4.* || 6.0.*",
        "symfony/yaml": "5.4.* || 6.0.*"
    },
    "require-dev": {
        "phpstan/extension-installer": "^1.1",
        "phpstan/phpstan": "^1.2",
        "phpstan/phpstan-phpunit": "^1.0",
        "phpunit/phpunit": "^9.5",
        "squizlabs/php_codesniffer": "^3.6"
    },
    "config": {
        "sort-packages": true
    }
}
